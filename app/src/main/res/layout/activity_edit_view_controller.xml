<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.smartreminder.app.controller.EditViewController">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin" >

            <EditText
                android:id="@+id/titleInputView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:editable="true"
                android:enabled="true"
                android:hint="set event title"
                android:layout_gravity="center"
                android:singleLine="true"
                android:layout_alignTop="@+id/imageView3"
                android:layout_toRightOf="@+id/imageView3"
                android:layout_marginTop="-8dp" />

            <EditText
                android:id="@+id/descriptionInputView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:editable="true"
                android:enabled="true"
                android:hint="set event description"
                android:layout_gravity="center"
                android:layout_alignTop="@+id/imageView4"
                android:layout_toRightOf="@+id/imageView4"
                android:layout_marginTop="-8dp"
                android:maxLines="5" />

            <EditText
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:enabled="true"
                android:id="@+id/dateSelect"
                android:hint="2014-06-01"
                android:editable="false"
                android:layout_alignTop="@+id/imageButton"
                android:layout_alignLeft="@+id/descriptionInputView"
                android:layout_alignStart="@+id/descriptionInputView"
                android:layout_marginTop="-8dp" />

            <EditText
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:enabled="true"
                android:id="@+id/timeSelect"
                android:hint="00:00"
                android:editable="false"
                android:layout_alignTop="@+id/imageView"
                android:layout_toRightOf="@+id/imageView"
                android:layout_marginTop="-8dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:text="Delete"
                android:id="@+id/deleteButton"
                android:textColor="#ffffff"
                android:background="#ff2a1a"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:enabled="true"
                android:clickable="true"
                android:typeface="normal"
                android:layout_below="@+id/imageView6"
                android:layout_marginTop="24dp"
                android:alpha="0.6" />

            <Switch
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alert Me"
                android:id="@+id/alertSwitch"
                android:checked="false"
                android:layout_alignTop="@+id/imageView2"
                android:layout_toRightOf="@+id/imageView2"
                android:layout_marginLeft="5dp" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/imageView"
                android:background="@drawable/clock_512"
                android:layout_alignTop="@+id/imageButton"
                android:layout_toRightOf="@+id/dateSelect"
                android:layout_marginLeft="32dp" />

            <ImageButton
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/imageButton"
                android:background="@drawable/calendar_512"
                android:clickable="false"
                android:layout_below="@+id/alertSwitch"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="12dp" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/imageView2"
                android:background="@drawable/alert_512"
                android:layout_below="@+id/descriptionInputView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="32dp" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/imageView3"
                android:background="@drawable/bookmark_512"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="16dp" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/imageView4"
                android:background="@drawable/document_512"
                android:layout_below="@+id/titleInputView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="12dp" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/imageView5"
                android:background="@drawable/map_512"
                android:layout_below="@+id/imageButton"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="32dp" />

            <ImageView
                android:layout_width="256dp"
                android:layout_height="wrap_content"
                android:id="@+id/imageView6"
                android:background="@drawable/world_map_512"
                android:layout_below="@+id/textView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Adding location notification, coming soon...."
                android:id="@+id/textView"
                android:textColor="#c0c0c0"
                android:layout_alignTop="@+id/imageView5"
                android:layout_toRightOf="@+id/imageView5"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="8dp" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
